{
	"compilerOptions": {
		"target": "es2022",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@components/*": [ "./src/components/*" ],
			"@utils/*": [ "./src/utils/*" ],
			"@props": [ "./src/props" ],
			"@db": [ "./src/db" ],
		},
		"strict": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/config/config.json"
	],
	"exclude": [
		"**/node_modules/**"
	]
}