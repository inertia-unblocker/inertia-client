{
	"compilerOptions": {
		"target": "es2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@theme": [
				"./src/components/theme"
			],
			"@navigation/*": [
				"./src/components/navigation/*"
			],
			"@elements/*": [
				"./src/components/elements/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@css/*": [
				"./src/css"
			],
			"@config": [
				"./src/config/config.json"
			]
		},
		"strict": false
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/config/config.json"
	],
	"exclude": [
		"**/node_modules/**"
	]
}