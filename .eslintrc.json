{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
		"plugin:react/recommended"
    ],
    "parserOptions": {
		"sourceType": "module",
        "ecmaVersion": 12
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],

		"no-unused-vars": ["off"],
		"no-undef": ["off"]
    },
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
